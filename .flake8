[flake8]
# Flake8 Configuration for SparkNode Backend
# Enforces code quality standards and style consistency

max-line-length = 120
max-complexity = 10

# Error codes to always report
select =
    E,
    W,
    F,
    C901

# Ignore these error codes
ignore =
    E203,
    E501,
    W503,
    W504

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    .tox,
    .coverage,
    htmlcov,
    build,
    dist,
    migrations,
    node_modules,
    frontend,
    __init__.py

# Per-file ignores
per-file-ignores =
    __init__.py: F401
    tests/*.py: F401, F811

# Complexity settings
max-doc-length = 100
indent-size = 4

# Output settings
format = default
count = true
statistics = true
show-source = true

# Docstring convention
docstring-convention = google
