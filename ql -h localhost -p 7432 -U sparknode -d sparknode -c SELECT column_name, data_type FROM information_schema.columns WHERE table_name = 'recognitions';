 updated_at           | timestamp with time zone |           |          | now()
Indexes:
    "recognitions_pkey" PRIMARY KEY, btree (id)
Check constraints:
    "recognitions_status_check" CHECK (status::text = ANY (ARRAY['pending'::character varying, 'active'::character varying, 'rejected'::character varying, 'revoked'::character varying]::text[]))
    "recognitions_visibility_check" CHECK (visibility::text = ANY (ARRAY['public'::character varying, 'private'::character varying, 'department'::character varying]::text[]))
Foreign-key constraints:
    "recognitions_badge_id_fkey" FOREIGN KEY (badge_id) REFERENCES badges(id)
    "recognitions_department_budget_id_fkey" FOREIGN KEY (department_budget_id) REFERENCES department_budgets(id)
    "recognitions_from_user_id_fkey" FOREIGN KEY (from_user_id) REFERENCES users(id)
    "recognitions_lead_budget_id_fkey" FOREIGN KEY (lead_budget_id) REFERENCES lead_budgets(id)
    "recognitions_tenant_id_fkey" FOREIGN KEY (tenant_id) REFERENCES tenants(id) ON DELETE CASCADE
    "recognitions_to_user_id_fkey" FOREIGN KEY (to_user_id) REFERENCES users(id)
