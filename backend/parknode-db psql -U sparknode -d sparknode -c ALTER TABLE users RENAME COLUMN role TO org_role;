Check constraints:
    "users_role_check" CHECK (org_role::text = ANY (ARRAY['platform_owner'::character varying, 'platform_admin'::character varying, 'tenant_admin'::character varying, 'hr_admin'::character varying, 'tenant_lead'::character varying, 'manager'::character varying, 'corporate_user'::character varying, 'employee'::character varying]::text[]))
    "users_status_check" CHECK (status::text = ANY (ARRAY['PENDING_INVITE'::character varying, 'ACTIVE'::character varying, 'DEACTIVATED'::character varying, 'pending_invite'::character varying, 'active'::character varying, 'deactivated'::character varying]::text[]))
