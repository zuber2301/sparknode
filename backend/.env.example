# SparkNode Backend Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env to version control (it's already in .gitignore)

# Database Configuration
DATABASE_URL=postgresql://sparknode:sparknode_password@localhost:5432/sparknode
SQLALCHEMY_ECHO=false

# JWT/Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Celery/Redis Configuration (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# OpenAI Configuration (for Copilot LLM)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# LLM Model Selection
# Options: gpt-4, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4

# LLM Response Limits
OPENAI_MAX_TOKENS=500

# Copilot Feature Flag
COPILOT_ENABLED=true

# Application Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sparknode.log
