# ===========================================
# SPARKNODE - Environment Configuration
# ===========================================
# This file defines all configurable settings for the SparkNode application.
# Copy to .env and modify as needed. Do NOT commit .env to version control.

# Project identifier (used for Docker network/container naming)
PROJECT_NAME=sparknode

# ===========================================
# PORT ALLOCATION SCHEME
# ===========================================
# To avoid conflicts with other projects, SparkNode uses ports in the 6xxx range:
#   - Database: 6432 (internal 5432)
#   - Backend:  6100 (internal 8000)
#   - Frontend: 6173 (internal 5173)
#
# Other projects should use different ranges:
#   - Project A: 6xxx (SparkNode)
#   - Project B: 7xxx
#   - Project C: 9xxx
#   - etc.

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_EXTERNAL_PORT=6432
POSTGRES_USER=sparknode
POSTGRES_PASSWORD=sparknode_secret_2024
POSTGRES_DB=sparknode

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_EXTERNAL_PORT=6100

# Frontend Configuration  
FRONTEND_PORT=5173
FRONTEND_EXTERNAL_PORT=6173

# JWT Configuration
SECRET_KEY=sparknode-super-secret-key-change-in-production-$(openssl rand -hex 32)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:6173,http://127.0.0.1:6173

# ===========================================
# EMAIL (SMTP) CONFIGURATION
# ===========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@sparknode.com
SMTP_USE_TLS=true

# ===========================================
# SMS (TWILIO) CONFIGURATION
# ===========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ===========================================
# CELERY / REDIS CONFIGURATION
# ===========================================
REDIS_EXTERNAL_PORT=7379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# CELERY / REDIS CONFIGURATION
# ===========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# DERIVED URLS (auto-computed from above)
# ===========================================
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
VITE_API_URL=http://localhost:${BACKEND_EXTERNAL_PORT}
