# ──────────────────────────────────────────────────────────────
# SparkNode — Production .env template
# Copy to /opt/sparknode/.env on the VM and fill in values
# ──────────────────────────────────────────────────────────────

PROJECT_NAME=sparknode
ENVIRONMENT=production
DOMAIN=app.sparknode.io
ACME_EMAIL=devops@sparknode.io
APP_VERSION=latest
DOCKERHUB_ORG=zuber2301

# ─── PostgreSQL ──────────────────────────────────────────────
POSTGRES_USER=sparknode
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=sparknode

# ─── Backend ─────────────────────────────────────────────────
DATABASE_URL=postgresql://sparknode:CHANGE_ME@postgres:5432/sparknode
APP_DATABASE_URL=postgresql://sparknode:CHANGE_ME@postgres:5432/sparknode
SECRET_KEY=CHANGE_ME_RANDOM_64_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
CORS_ORIGINS=https://app.sparknode.io

# ─── SMTP ────────────────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@sparknode.io
SMTP_USE_TLS=true

# ─── Celery / Redis ─────────────────────────────────────────
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
