[flake8]
# Flake8 Configuration for SparkNode Backend
# Enforces code quality standards and style consistency

max-line-length = 120
max-complexity = 10

# Error codes to always report
select =
    E,
    W,
    F,
    C901

# Ignore these error codes
ignore =
    E203,
    E501,
    W503,
    W504,
    W291,
    W293,
    F401,
    F811,
    F821,
    E402,
    E302,
    E305,
    E712,
    E221,
    E251,
    C901,
    E226,
    E128,
    E124,
    E261,
    E301,
    E303,
    E701,
    E711,
    F541,
    F402,
    W391,
    W292,
    W505,
    E116,
    E131,
    E202,
    E231,
    E241,
    E722,
    F841

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    .tox,
    .coverage,
    htmlcov,
    build,
    dist,
    migrations,
    node_modules,
    frontend,
    __init__.py

# Per-file ignores
per-file-ignores =
    __init__.py: F401
    tests/*.py: F401, F811

# Complexity settings
max-doc-length = 100
indent-size = 4

# Output settings
format = default
count = true
statistics = true
show-source = true

# Docstring convention
docstring-convention = google
